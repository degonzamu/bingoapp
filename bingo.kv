<MyLabel>:
    font_size: 25
    size_hint_y:None
    height: 30
    text_size: cm(10), cm(20)
    valign: 'middle'
    canvas.before:
        Color:
            rgb: .6, .6, .6
        Rectangle:
            pos: self.pos
            size: self.size


<BingoGame>:
    BoxLayout:
        id:box_menu
        orientation: "vertical"
        Button:
            background_color: 0,0,0,0
            text: 'Reiniciar'
            size_hint: (1,0.005)
            canvas.before:
                Color:
                    rgb: .6, .6, .6
                RoundedRectangle:
                    pos:  self.pos
                    size: self.size
                    radius: [(40, 40), (40, 40), (20, 20), (20, 20)]
            on_press: root.reset()
        Image:
            source: 'bingo_cage.png'
            size_hint: (1,0.05)
            canvas:
                Color:
                    rgb: (1, 1, 1)
                Rectangle:
                    texture: self.texture
                    size: self.width + 20, self.height + 20
                    pos: self.x - 10, self.y - 10
        Button:
            id: button_add
            background_color: 0,0,0,0
            text: 'Dale al bombo'
            size: (10,20)
            size_hint: (1,0.005)
            pos: (10,20)
            canvas.before:
                Color:
                    rgb: .6, .6, .6
                RoundedRectangle:
                    pos:  self.pos
                    size: self.size
                    radius: [(40, 40), (40, 40), (20, 20), (20, 20)]
            on_press: root.calculate_random_number()
    AnchorLayout:
        anchor_x:'center'
        anchor_y:'center'
        Label:
            id: label_value
            text: '...'
            color: 0,0,0,1
            size_hint: (0.125,0.05)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Ellipse:
                    pos: self.pos
                    size: self.size
    GridLayout:
        id: values
        cols: 5
        #orientation: "horizontal"
        padding : 2, 0
        spacing: 2, 0
        #size: 500, 30
        size_hint: 1, 1
        pos: self.pos
        size: self.size
